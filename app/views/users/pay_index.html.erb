<div class="main user-show">
  <div class="container">
    <ul class="user-tabs">
      <li class="active"><%= link_to("月別生活費", "/users/#{@user.id}") %></li>
    </ul>
    
    <% @pay_index.each do |f| %>
      <div class="posts-index-item">
        <div class="post-right">
          <%= link_to(f.pay_month.strftime('%Y年%-m月の生活費'),"/users/#{@user.id}/posts/#{f.pay_month}") %>
        </div>
      </div>
    <% end %>
  </div>
</div>