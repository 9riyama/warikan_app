<div class="main posts-show">
  <div class="container">
    <p>【月別生活費】</P>
    <div class="posts-show-item">
      <div class="post-user-name">
      </div>
      <p><%= "・#{@posts[0].pay_month.strftime('%Y年%-m月')}生活費合計：#{@total}円" %></p>
      <p><%= "・一人当たり：#{@warikan}円" %>
      <P><img src="<%= "/user_images/#{@user.image_name}" %>">
      <%= " #{@user.name} 支払額合計：#{@user_total}円" %></P>
      <P><img src="<%= "/user_images/#{@user.image_partner}" %>">
      <%= " #{@user.partner_name} 支払額合計：#{@partner_total}円" %></P>
            <p><% if @user_total > @partner_total %></p>
           <P><%= "【#{@user.partner_name}】は【#{@user.name}】に#{@user_pay}円渡してね" %></P>
         <% else %>
           <P><%= "#{@user.name}は{@user.partner_name}に#{@partner_pay}円渡してね" %></P>
         <% end %>
        <%= pie_chart @chart %></p>
    </div>
  </div>
</div>