<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_tag("/posts") do %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <p>支払者</p>
            <p><%= select_tag 'pay_name', options_for_select({ @current_user.name => 1, @current_user.partner_name => 2 }) %></p>
          <p>支払月</p>
            <p><%= date_select :pay_month, :date, :discard_day => true, :use_month_numbers => true %></p>
          <p>カテゴリ</p>
            <%= collection_select(:category_id,:keys, Category.all, :id, :name,:prompt => "選択してください") %>
          <p>支払金額</p>
            <input type="tel" name="payment" style="width:30%;height:30px;" />
          <p>メモ</p>
            <textarea name="content"><%= @post.content %></textarea>
            <input type="submit" value="投稿">
        </div>
      </div>
    <% end %>
  </div>
</div>