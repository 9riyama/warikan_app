<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <% if post.pay_name == "1" %>
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
          <% else %>
            <img src="<%= "/user_images/#{post.user.image_partner}" %>">
          <% end %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.pay_month.to_s(:month), "/users/#{post.user.id}") %>
          </div>
            <% if post.pay_name == "1" %>
              <%= link_to("支払者：#{post.user.name} 支払額： #{post.payment}円 カテゴリ： #{post.category.name}", "/posts/#{post.id}") %>
            <% else %>
              <%= link_to("支払者：#{post.user.partner_name} 支払額： #{post.payment}円 カテゴリ： #{post.category.name}", "/posts/#{post.id}") %>
            <% end %>
        </div>
      </div>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>